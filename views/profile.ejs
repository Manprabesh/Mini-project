<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/stylesheet/style.css">
</head>

<body class="bg-zinc-900 text-white  ml-6 ">

    <div class="flex item-start gap-3 mt-20">

        <div class="profile bg-red-500 h-20 w-20 rounded-md overflow-hidden ">
            <img class="w-full h-full object-cover  " src="/images/uploads/<%=user.profilePic%>" alt="">
        </div>
        <h1 class="content-center">
            <%= user.username %>
        </h1>
    </div>

    <div class="mt-20">

        <button><a href="/write" class="bg-green-600 text-black px-2 py-1">Write</a></button>
        <button><a href="/home" class="bg-green-600 text-black px-2 py-1">Home</a></button>
        <button><a href="/upload/profile" class="bg-green-600 text-black px-2 py-1">profile pic</a></button>
        <button><a href="/pics" class="bg-green-600 text-black px-2 py-1">Upload pictures</a></button>
        <button><a href="/logout" class="bg-green-600 text-black px-2 py-1">Logout</a></button>
    </div>




    <div class="parent">
        <div class="div1 mb-10 ">
            <h1 class="text-3xl my-10">Blogs</h1>

            <% user.posts.forEach(function(post) { %>
                <div
                    class="content border-2 border-green-600 w-56 h-20 truncate mb-2 flex flex-col justify-between bg-zinc-800 px-3  py-2 rounded-md">

                    <h3 class="text-xl">
                        <%= post.heading %>
                    </h3>
                    <a class="text-amber-400 text-xs self-start " href="/read/<%= post._id %>">Read More</a>
                </div>
                <% }) %>

        </div>

        <div class="div2 bg-transparent">
            <h1 class="text-3xl my-10">My Posts</h1>
            <div class="flex flex-wrap justify-center">
                <% user.Image.forEach(function(photo) { %>

                        <div class="bg-red-500 h-56 w-56 overflow-hidden flex items-center rounded-md shadow-2xl m-4">
                            <img class="fle" src="/images/uploads/<%= photo.photos %>" alt="">
                        </div>

                <% }) %>
            </div>
        </div>

    </div>
</body>

</html>